<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manyi.iw.contract.soa.server.mybatis.dao.read.custom.SaleContractOrderAgentFollowReadDao">

    <select id="searchFollowOrderIdListByAgentId" parameterType="com.manyi.iw.contract.soa.api.model.vo.sale.SearchFollowOrderParam"
            resultType="long">
        select
        orderId
        from iw_sale_contract_order_agent_follow
        where
        agentId = #{param.agentId}
        and follow = 1
        <if test="param.orderBy != null">
            order by ${param.orderBy}
        </if>
        limit #{param.offset},#{param.pageSize}
    </select>

    <select id="countFollowOrderIdListByAgentId" parameterType="com.manyi.iw.contract.soa.api.model.vo.sale.SearchFollowOrderParam"
            resultType="int">
        select
        count(*)
        from iw_sale_contract_order_agent_follow
        where
        agentId = #{param.agentId}
        and follow = 1
    </select>
    <select id="getOrderAgentFollow"
            parameterType="com.manyi.iw.contract.soa.api.model.vo.sale.GetOrderAgentFollowParam"
            resultType="com.manyi.iw.contract.soa.api.model.vo.sale.GetOrderAgentFollowResult$ValidateResultVo">
        select
        orderId,follow
        from iw_sale_contract_order_agent_follow
        where
        agentId = #{param.agentId}
        and orderId in
        <foreach collection="param.orderIdList" item="listItem" open="(" close=")" separator=",">
            #{listItem}
        </foreach>
    </select>
</mapper>